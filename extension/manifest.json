{
  "manifest_version": 3,
  "name": "MisResultados Helper",
  "version": "1.0.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "es",

  "browser_specific_settings": {
    "gecko": {
      "id": "misresultados-helper@raulnegron.me"
    }
  },

  "permissions": ["storage"],
  "host_permissions": [
    "*://misresultados.com/*",
    "*://e-labresults.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://misresultados.com/soy-un-paciente/*",
        "*://e-labresults.com/im-a-patient/*"
      ],
      "js": ["content/autofill.js"],
      "css": ["content/styles.css"]
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon.svg"
  },

  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}
